        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:entries="@array/puntaje"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/testArea_txtPregunta6"
        app:layout_constraintTop_toBottomOf="@+id/testArea_spnRespuesta5" />

    <TextView
        android:id="@+id/testArea_txtPregunta6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/TestArea_pregunta6"
